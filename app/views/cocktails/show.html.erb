<h1><%= @cocktail.name %></h1>


<h2>Ingredients</h2>

<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
    <li><%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY", width: 400, height: 300, crop: :fill) %></li>
  <% end %>
</ul>
