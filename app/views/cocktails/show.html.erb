<h1><%= @cocktail.name %></h1>


<h2>Ingredients</h2>

<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
  <% end %>
</ul>

<div>
  <%  if @cocktail.photo.present?  %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>
